<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrackReportActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_tool"
        android:background="#0078C9">

        <ImageView
            android:layout_margin="2dp"
            android:id="@+id/backreport"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_keyboard_backspace_black_24dp" />

        <TextView
            android:layout_toEndOf="@id/backreport"
            android:id="@+id/report_head"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/track_your_reports"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#fff" />
    </RelativeLayout>

    <ListView
        android:id="@+id/reportlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_tool"
        android:layout_alignParentStart="true"/>

</RelativeLayout>